<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        style="@style/ActivityRootLayout">

    <fragment android:id="@+id/image_list"
              android:name="me.timnew.remoteimagepicker.ImageGridFragment_"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:tag="image_list"
              tools:layout="@layout/fragment_image_grid"/>

    <fragment android:id="@+id/sliding_menu"
              android:name="me.timnew.remoteimagepicker.SlidingMenuFragment_"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              tools:layout="@layout/sliding_menu"/>

</android.support.v4.widget.DrawerLayout>